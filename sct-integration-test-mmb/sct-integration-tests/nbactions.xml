<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-clean test 4g</actionName>
            <displayName>clean test 4g</displayName>
            <goals>
                <goal>clean</goal>
                <goal>post-integration-test</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-ea -d64 -XX:+UseCompressedOops -Xmx4g -Xms1g</Env.MAVEN_OPTS>
            </properties>
        </action>
        <action>
            <actionName>test.single</actionName>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${className} -Xmx4g -XX:+UseCompressedOops</test>
            </properties>
        </action>
        <action>
            <actionName>debug.test.single</actionName>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <maven.surefire.debug>-Xmx4g -XX:+UseCompressedOops -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
                <exec.args>-Xmx4g -XX:+UseCompressedOops</exec.args>
                <jpda.stopclass>${packageClassName}</jpda.stopclass>
                <forkMode>never</forkMode>
                <Env.MAVEN_OPTS>-ea -d64 -XX:+UseCompressedOops -Xmx4g -Xms1g</Env.MAVEN_OPTS>
                <test>${className}</test>
                
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.classpathScope>runtime</exec.classpathScope>
                <exec.args>-classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.classpathScope>runtime</exec.classpathScope>
                <exec.args>-Xmx4g -XX:+UseCompressedOops -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
                <jpda.listen>true</jpda.listen>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -classpath %classpath ${packageClassName}</exec.args>
                <profiler.action>profile</profiler.action>
                <exec.executable>${profiler.java}</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug.single.main</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.classpathScope>${classPathScope}</exec.classpathScope>
                <exec.args>-Xmx4g -XX:+UseCompressedOops -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
                <jpda.listen>true</jpda.listen>
                <jpda.stopclass>${packageClassName}</jpda.stopclass>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
