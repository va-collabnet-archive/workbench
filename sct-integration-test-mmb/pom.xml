
<project xmlns="http://maven.apache.org/POM/4.0.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                      http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ihtsdo</groupId>
    <artifactId>sct-integration-test-mmb</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>${branch}: sct-integration-test-mmb</name>
    <url>http://maven.apache.org</url>
    <properties>
        <branch>19v SCT-EN-ES-VTMVMP</branch>
        <wb-toolkit.version>2.6.0-trek-14-SNAPSHOT</wb-toolkit.version>
        <berkeleydb.directory>${project.build.directory}/test-resources/berkeley-db</berkeleydb.directory>
        <org.apache.lucene.version>3.0.3</org.apache.lucene.version>
        <org.ihtsdo.mrcm.specs.version>0.0.5-SNAPSHOT</org.ihtsdo.mrcm.specs.version>
        <org.ihtsdo.migration-wf-data>0.0.4-SNAPSHOT</org.ihtsdo.migration-wf-data>
        <org.ihtsdo.sct.baseline.datafiles.version>2011.01.31-build-2-SNAPSHOT</org.ihtsdo.sct.baseline.datafiles.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.8.2</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.ihtsdo</groupId>
                <artifactId>tk-junit-ext</artifactId>
                <version>${wb-toolkit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.ihtsdo</groupId>
                <artifactId>wb-bdb</artifactId>
                <version>${wb-toolkit.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ihtsdo.sct</groupId>
                <artifactId>sct-all-version-sct-en-es-vtmvmp</artifactId>
                <version>${org.ihtsdo.sct.baseline.datafiles.version}</version>
                <type>zip</type>
            </dependency>
            <dependency>
                <groupId>org.ihtsdo.sct</groupId>
                <artifactId>mrcm-refset-specs</artifactId>
                <type>zip</type>
                <version>${org.ihtsdo.mrcm.specs.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-scm-plugin</artifactId>
                <version>1.4</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>2.2</version>
                </plugin>
                <plugin>
                    <groupId>org.ihtsdo</groupId>
                    <artifactId>wb-bdb-mojo</artifactId>
                    <version>${wb-toolkit.version}</version>
                </plugin>
               <plugin>
                    <groupId>org.ihtsdo</groupId>
                    <artifactId>wb-mojo</artifactId>
                    <version>${wb-toolkit.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <modules>
        <module>sct-integration-db</module>
        <module>sct-integration-tests</module>
        <module>sct-integration-classifier-tests</module>
    </modules>
</project>
