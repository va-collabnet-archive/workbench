<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ihtsdo.qadb.data.QADatabaseMapper">
	
	<resultMap type="QADatabase" id="databaseResultMap">
		<id property="databaseUuid" column="database_uid"/>
		<result property="name" column="name"/>
	</resultMap>
	
	<select id="selectDatabaseByUUID" parameterType="String" resultMap="databaseResultMap">
		SELECT * FROM qa_database
			WHERE 	database_uid = #{id}
	</select>
	
	<select id="selectAllDatabases" resultMap="databaseResultMap">
		SELECT * FROM qa_database
	</select>
	
</mapper>