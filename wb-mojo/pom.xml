			<artifactId>tools</artifactId> <version>any</version> <scope>system</scope> 
			<systemPath>C:\SoftwareApps\Java\jdk1.6.0_20\lib\tools.jar</systemPath> </dependency> 
			</dependencies> </profile> <profile> <id>add-tools-on-linux</id> <activation> 
