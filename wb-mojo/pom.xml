		<profile>
			<id>genweb</id>
			<activation>
				<property>
					<name>webgengoals</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-plugin-plugin</artifactId>
						<configuration>
							<goalPrefix>plugin</goalPrefix>
							<outputDirectory>${project.build.directory}/generated-site/xdoc/plugins</outputDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
