    </build>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jxr-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>
    <modules>
        <module>foundation</module>
        <module>core</module>
        <module>ace-api</module>
        <module>vodb</module>
        <module>dwfa-mojo</module>
        <module>term-mojo</module>
    </modules>
</project>
