<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <!-- Replace this parent with your organization's parent -->
  <parent>
    <groupId>org.dwfa</groupId>
		<artifactId>dwfa-pom</artifactId>
		<version>3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ihtsdo.sample</groupId>
  <artifactId>wb-sample-pa</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Workbench IDE Project Assembly</name>
  <description>Workbench IDE Project Assembly</description>
  <scm>
    <connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/wb-sample-pa/trunk</connection>
    <developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/wb-sample-pa/trunk</developerConnection>
    <url>https://csfe.aceworkspace.net/svn/repos/workbench/wb-sample-pa/trunk</url>
  </scm>
  <properties>
		<wb-toolkit.version>2.6.0-trek-1-SNAPSHOT</wb-toolkit.version>
    <org.dwfa.jini.version>2.1</org.dwfa.jini.version>
    <svnkit.version>1.3.0.5847</svnkit.version>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>ihtsdo-resources</artifactId>
        <version>1.0</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-icons</artifactId>
        <version>1.0.1-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>documentation</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-bdb</artifactId>
        <version>${wb-toolkit.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-ide-admin-bp</artifactId>
        <scope>runtime-directory</scope>
        <version>1.3</version>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-ide-user-bp</artifactId>
        <scope>runtime-directory</scope>
        <version>1.4</version>
      </dependency>
      <dependency>
        <groupId>org.dwfa.jini</groupId>
        <artifactId>start</artifactId>
        <scope>compile</scope>
        <version>${org.dwfa.jini.version}</version>
      </dependency>
      <dependency>
        <groupId>org.dwfa.jini</groupId>
        <artifactId>jsk-dl</artifactId>
        <scope>compile</scope>
        <version>${org.dwfa.jini.version}</version>
      </dependency>
      <dependency>
        <!--
            A dependency required to use the jini/jehri dynamic provider
            security model
          -->
        <groupId>org.dwfa.jini</groupId>
        <artifactId>jsk-policy</artifactId>
        <scope>provided</scope>
        <version>${org.dwfa.jini.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-resources-plugin</artifactId>
			        <version>2.4.3</version>
				</plugin>
				<plugin>
          <groupId>org.ihtsdo</groupId>
          <artifactId>wb-bdb-mojo</artifactId>
          <version>${wb-toolkit.version}</version>
        </plugin>
        <plugin>
          <groupId>org.ihtsdo</groupId>
          <artifactId>wb-mojo</artifactId>
          <version>${wb-toolkit.version}</version>
          <configuration>
            <stagingDirectory>${user.home}/Sites/</stagingDirectory>
            <visibility>priv</visibility>
            <cubitProject>cement</cubitProject>
            <siteRoot>${artifactId}</siteRoot>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.dwfa</groupId>
          <artifactId>dwfa-mojo</artifactId>
          <version>2.0.31</version>
        </plugin>
        <plugin>
          <groupId>org.dwfa</groupId>
          <artifactId>term-mojo</artifactId>
          <version>1.43</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <modules>
    <module>database</module>
    <module>java-binding</module>
    <module>profiles</module>
    <module>editor-standalone</module>
  </modules>
  <profiles>
    <profile>
      <id>bundle-all</id>
      <modules>
        <module>documentation</module>
        <module>viewer</module>
        <module>editor-synchronized</module>
        <module>content-distribution</module>
      </modules>
    </profile>
    <profile>
      <id>distribution</id>
      <modules>
        <module>content-distribution</module>
      </modules>
    </profile>
    <profile>
      <id>viewer</id>
      <modules>
        <module>viewer</module>
      </modules>
    </profile>
    <profile>
      <id>standalone</id>
      <modules>
        <module>editor-standalone</module>
      </modules>
    </profile>
    <profile>
      <id>synchronized</id>
      <modules>
        <module>editor-synchronized</module>
      </modules>
    </profile>
  </profiles>
    <!-- Reconfigure the central repository definitions, which will be directed by settings.xml to IHTSDO.
         These should be pushed into the parent POM -->
    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <url>http://mgr.servers.aceworkspace.net/apps/maestro_ihtsdo/archiva/repository/all/</url>
            <snapshots>
                <enabled>true</enabled>
                <checksumPolicy>fail</checksumPolicy>
            <!-- To be reviewed, currently daily is the default
            <updatePolicy>never</updatePolicy>
            -->
            </snapshots>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>
    <repositories>
        <repository>
            <id>central</id>
            <url>http://mgr.servers.aceworkspace.net/apps/maestro_ihtsdo/archiva/repository/all/</url>
            <snapshots>
                <enabled>true</enabled>
                <checksumPolicy>fail</checksumPolicy>
            <!-- To be reviewed, currently daily is the default
            <updatePolicy>never</updatePolicy>
            -->
            </snapshots>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </repository>
    </repositories>
</project>
