<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.dwfa</groupId>
		<artifactId>dwfa-pom</artifactId>
		<version>2.26</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.dwfa</groupId>
	<artifactId>core</artifactId>
	<version>2.0.20-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Core Distributed Workflow Architecture Components</name>
	<url>
		https://mgr.servers.aceworkspace.net/pbl/cubitci/pub/core/site/index.html
	</url>
	<scm>
		<connection>
			scm:svn:https://csfe.aceworkspace.net/svn/repos/core/trunk
		</connection>
		<developerConnection>
			scm:svn:https://csfe.aceworkspace.net/svn/repos/core/trunk
		</developerConnection>
		<url>
			https://csfe.aceworkspace.net/sf/scm/do/listRepositories/projects.dwfa/scm
		</url>
	</scm>
	<ciManagement>
		<system>continuum</system>
		<url>
			https://mgr.servers.aceworkspace.net/apps/ace_continuum2/continuum/projectView.action?projectId=3
		</url>
	</ciManagement>
	<dependencies>
		<dependency>
			<groupId>org.dwfa.jini</groupId>
			<artifactId>mahalo</artifactId>
			<scope>compile</scope>
			<version>2.1</version>
		</dependency>
    <dependency>
     <!-- An alternative to:
      <dependency>
          <groupId>javax.mail</groupId>
          <artifactId>mail</artifactId>
          <version>1.4</version>
          <scope>compile</scope>
      </dependency>
     secondary to licensing issues -->
      <groupId>org.apache.geronimo.javamail</groupId>
      <artifactId>geronimo-javamail_1.4_mail</artifactId>
      <version>1.6</version>
    </dependency>
    <dependency>
     <!-- An alternative to:
    <dependency>
      <groupId>javax.activation</groupId>
      <artifactId>activation</artifactId>
      <version>1.1</version>
    </dependency>
     secondary to licensing issues -->
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-activation_1.1_spec</artifactId>
      <version>1.0.2</version>
    </dependency>
		<dependency>
			<groupId>net.jini</groupId>
			<artifactId>jsk-lib</artifactId>
			<version>2.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>net.jini</groupId>
			<artifactId>jsk-platform</artifactId>
			<version>2.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.dwfa</groupId>
			<artifactId>foundation</artifactId>
			<version>2.0.25-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.dwfa.jini</groupId>
			<artifactId>browser</artifactId>
			<version>2.1</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-7</version>
			</plugin>
			<plugin>
				<groupId>org.dwfa</groupId>
				<artifactId>pbl-mojo</artifactId>
				<version>1.1</version>
				<configuration>
					<cubitProject>cubitci</cubitProject>
					<siteRoot>core</siteRoot>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>