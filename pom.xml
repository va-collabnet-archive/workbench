<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <!-- Replace this parent with your organization's parent -->
  <parent>
    <groupId>org.ihtsdo</groupId>
    <artifactId>ihtsdo-parent</artifactId>
    <version>1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ihtsdo.sample</groupId>
  <artifactId>wb-sample-pa</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Workbench IDE Project Assembly</name>
  <description>Workbench IDE Project Assembly</description>
  <scm>
    <connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/wb-sample-pa/trunk</connection>
    <developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/wb-sample-pa/trunk</developerConnection>
    <url>https://csfe.aceworkspace.net/svn/repos/workbench/wb-sample-pa/trunk</url>
  </scm>
  <properties>
    <!-- must be trek as it has the required wb-mojo changes -->
    <wb-toolkit.version>2.6.0-trek-4-SNAPSHOT</wb-toolkit.version>
    <org.dwfa.jini.version>2.1</org.dwfa.jini.version>
    <org.apache.lucene.version>3.0.2</org.apache.lucene.version>
    <svnkit.version>1.3.0.5847</svnkit.version>
    <baseline.database.version>2010-07-31-SNAPSHOT</baseline.database.version>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.ihtsdo.sample</groupId>
        <artifactId>ihtsdo-generate-econcepts</artifactId>
        <version>${baseline.database.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo.sample</groupId>
        <artifactId>sct-mini-release</artifactId>
        <version>${baseline.database.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>ihtsdo-resources</artifactId>
        <version>1.0</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-icons</artifactId>
        <version>1.0.1</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>documentation</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-bdb</artifactId>
        <version>${wb-toolkit.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-ide-admin-bp</artifactId>
        <type>zip</type>
        <version>1.4-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.ihtsdo</groupId>
        <artifactId>wb-ide-user-bp</artifactId>
        <type>zip</type>
        <version>1.5-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.dwfa.jini</groupId>
        <artifactId>start</artifactId>
        <scope>compile</scope>
        <version>${org.dwfa.jini.version}</version>
      </dependency>
      <dependency>
        <groupId>org.dwfa.jini</groupId>
        <artifactId>jsk-dl</artifactId>
        <scope>compile</scope>
        <version>${org.dwfa.jini.version}</version>
      </dependency>
      <dependency>
        <!--
            A dependency required to use the jini/jehri dynamic provider
            security model
          -->
        <groupId>org.dwfa.jini</groupId>
        <artifactId>jsk-policy</artifactId>
        <scope>provided</scope>
        <version>${org.dwfa.jini.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.ihtsdo</groupId>
          <artifactId>wb-bdb-mojo</artifactId>
          <version>${wb-toolkit.version}</version>
        </plugin>
        <plugin>
          <groupId>org.ihtsdo</groupId>
          <artifactId>wb-mojo</artifactId>
          <version>${wb-toolkit.version}</version>
          <configuration>
            <stagingDirectory>${user.home}/Sites/</stagingDirectory>
            <visibility>priv</visibility>
            <cubitProject>cement</cubitProject>
            <siteRoot>${project.artifactId}</siteRoot>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <modules>
    <module>database</module>
    <module>java-binding</module>
    <module>profiles</module>
    <module>editor-standalone</module>
    <module>queues</module>
  </modules>
  <profiles>
    <profile>
      <id>all</id>
      <modules>
        <module>documentation</module>
        <module>viewer</module>
        <module>database-synchronized</module>
        <module>editor-synchronized</module>
        <module>content-distribution</module>
      </modules>
    </profile>
    <profile>
      <id>documentation</id>
      <modules>
        <module>documentation</module>
      </modules>
    </profile>
    <profile>
      <id>viewer</id>
      <modules>
        <module>viewer</module>
      </modules>
    </profile>
    <profile>
      <id>sync</id>
      <modules>
        <module>database-synchronized</module>
        <module>editor-synchronized</module>
      </modules>
    </profile>
    <profile>
      <id>installer</id>
      <!-- Nothing to do here, just in sub-modules. Listed here for documentation purposes -->
    </profile>
  </profiles>
</project>
