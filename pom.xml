<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.ihtsdo</groupId>
		<artifactId>wb-mmb</artifactId>
		<version>2.5.1-trek-inf-1-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ihtsdo</groupId>
	<artifactId>wb-bundle</artifactId>
	<version>2.5.1-trek-inf-1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Workbench Bundle Multimodule Build</name>
	<description>Workbench Bundle</description>
	
	<properties>
		<org.ihtsdo.wb-mojo.version>${project.version}</org.ihtsdo.wb-mojo.version>
		<org.dwfa.jini.version>2.1</org.dwfa.jini.version>
	</properties>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.ihtsdo</groupId>
				<artifactId>ihtsdo-resources</artifactId>
				<version>1.0</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>org.dwfa</groupId>
				<artifactId>icons</artifactId>
				<version>1.15-SNAPSHOT</version>
			</dependency>
			<dependency>
			  <groupId>${project.groupId}</groupId>
			  <artifactId>documentation</artifactId>
			  <version>${project.version}</version>
			  <type>zip</type>
			</dependency>
			<dependency>
				<groupId>org.ihtsdo</groupId>
				<artifactId>wb-bdb</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.ihtsdo</groupId>
				<artifactId>wb-ide-admin-bp</artifactId>
				<scope>runtime-directory</scope>
				<version>1.3-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.ihtsdo</groupId>
				<artifactId>wb-ide-user-bp</artifactId>
				<scope>runtime-directory</scope>
				<version>1.4-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.dwfa.jini</groupId>
				<artifactId>start</artifactId>
				<scope>compile</scope>
				<version>${org.dwfa.jini.version}</version>
			</dependency>
			<dependency>
				<groupId>org.dwfa.jini</groupId>
				<artifactId>jsk-dl</artifactId>
				<scope>compile</scope>
				<version>${org.dwfa.jini.version}</version>
			</dependency>
			<dependency>
				<!--
					A dependency required to use the jini/jehri dynamic provider
					security model
				-->
				<groupId>org.dwfa.jini</groupId>
				<artifactId>jsk-policy</artifactId>
				<scope>provided</scope>
				<version>${org.dwfa.jini.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-resources-plugin</artifactId>
			        <version>2.4.3</version>
				</plugin>
				<plugin>	
					<groupId>org.ihtsdo</groupId>
    	            <artifactId>wb-bdb-mojo</artifactId>
        	        <version>${org.ihtsdo.wb-mojo.version}</version>
				</plugin>	
				<plugin>	
					<groupId>org.ihtsdo</groupId>
                	<artifactId>wb-mojo</artifactId>
                	<version>${org.ihtsdo.wb-mojo.version}</version>
					<configuration>
						<stagingDirectory>${user.home}/Sites/</stagingDirectory>
						<visibility>priv</visibility>
						<cubitProject>cement</cubitProject>
						<siteRoot>${artifactId}</siteRoot>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.dwfa</groupId>
					<artifactId>dwfa-mojo</artifactId>
					<version>2.0.31</version>
				</plugin>
				<plugin>
					<groupId>org.dwfa</groupId>
					<artifactId>term-mojo</artifactId>
					<version>1.43</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<modules>
		<module>documentation</module>        
		<module>database</module>
		<module>java-binding</module>
		<module>profiles</module>
		<module>editor-standalone</module>        
	</modules>
	<profiles>
		<profile>
			<id>bundle-all</id>
			<modules>
				<module>viewer</module>        
				<module>editor-synchronized</module>        
				<module>content-distribution</module>        
			</modules>	
		</profile>
		<profile>
			<id>distribution</id>
			<modules>
				<module>content-distribution</module>        
			</modules>	
		</profile>
		<profile>
			<id>viewer</id>
			<modules>
				<module>viewer</module>        
			</modules>	
		</profile>
		<profile>
			<id>standalone</id>
			<modules>
				<module>editor-standalone</module>        
			</modules>	
		</profile>
		<profile>
			<id>synchronized</id>
			<modules>
				<module>editor-synchronized</module>        
			</modules>	
		</profile>
	</profiles>
</project>
