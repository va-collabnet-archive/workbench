<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <groupId>org.ihtsdo</groupId>
      <artifactId>ihtsdo-wb-parent</artifactId>
      <version>1</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <groupId>org.ihtsdo</groupId>
   <artifactId>wb-mmb</artifactId>
   <version>2.6.0-trek-12-SNAPSHOT</version>
   <packaging>pom</packaging>
   <name>${branch}: (MMP) Workbench Toolkit</name>
   <description>The IHTSDO Workbench provides two software frameworks for
        terminology-focused applications: one for build-process
        automation, and another for interactive development environments.
        These frameworks provide application skeletons
        that can be customized by an application developer to meet unique
        needs of their end users.
   </description>
   <scm>
      <connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/branches/wb-toolkit_trek</connection>
      <developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/branches/wb-toolkit_trek</developerConnection>
      <url>https://csfe.aceworkspace.net/integration/viewvc/viewvc.cgi/branches/wb-toolkit_trek/?root=workbench&amp;system=exsy1002</url>
   </scm>
   <properties>
      <branch>trek</branch>
      <ace.devstyle.version>1.1-SNAPSHOT</ace.devstyle.version>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <drools.version>5.1.1</drools.version>
      <mvel2.version>2.0.16</mvel2.version>
      <org.apache.lucene.version>3.0.3</org.apache.lucene.version>
      <wb-icons-version>1.0.4</wb-icons-version>
      <je.version>4.1.7</je.version>
      <svnusername>${relusername}</svnusername>
      <svnpassword>${relpassword}</svnpassword>
      <svnkit.version>1.3.4</svnkit.version>
      <juint.version>4.7</juint.version>
      <maven-release-plugin.version>2.0</maven-release-plugin.version>
      <maven-jxr-plugin.version>2.2</maven-jxr-plugin.version>
      <maven-compiler-plugin.version>2.0.2</maven-compiler-plugin.version>
      <maven-project-info-reports-plugin.version>2.2</maven-project-info-reports-plugin.version>
      <maven-javadoc-plugin.version>2.7</maven-javadoc-plugin.version>
      <maven-plugin-plugin.version>2.6</maven-plugin-plugin.version>
      <maven-surefire-report-plugin.version>2.6</maven-surefire-report-plugin.version>
      <maven-enforcer-plugin.version>1.0</maven-enforcer-plugin.version>
   </properties>
   <dependencies>
      <dependency>
         <groupId>junit</groupId>
         <artifactId>junit</artifactId>
         <version>${juint.version}</version>
         <scope>test</scope>
      </dependency>
   </dependencies>
   <dependencyManagement>
      <dependencies>
         <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-compiler</artifactId>
            <version>${drools.version}</version>
         </dependency>
         <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>${drools.version}</version>
         </dependency>
         <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-api</artifactId>
            <version>${drools.version}</version>
         </dependency>
         <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-compiler</artifactId>
            <version>${drools.version}</version>
         </dependency>
         <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-templates</artifactId>
            <version>${drools.version}</version>
         </dependency>
         <dependency>
            <groupId>org.eclipse.jdt</groupId>
            <artifactId>core</artifactId>
            <version>3.4.2.v_883_R34x</version>
         </dependency>
         <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr-runtime</artifactId>
            <version>3.1.3</version>
         </dependency>
         <dependency>
            <groupId>org.mvel</groupId>
            <artifactId>mvel2</artifactId>
            <version>${mvel2.version}</version>
         </dependency>

         <dependency>
            <groupId>com.sleepycat</groupId>
            <artifactId>je</artifactId>
            <version>${je.version}</version>
         </dependency>
         <dependency>
            <groupId>org.tmatesoft.svnkit</groupId>
            <artifactId>svnkit-javahl</artifactId>
            <version>${svnkit.version}</version>
         </dependency>
         <dependency>
            <groupId>org.tmatesoft.svnkit</groupId>
            <artifactId>svnkit</artifactId>
            <version>${svnkit.version}</version>
            <exclusions>
               <exclusion>
                  <groupId>net.java.dev.jna</groupId>
                  <artifactId>jna</artifactId>
               </exclusion>
               <exclusion>
                  <groupId>org.tmatesoft.sqljet</groupId>
                  <artifactId>sqljet</artifactId>
               </exclusion>
               <exclusion>
                  <groupId>org.tmatesoft.svnkit</groupId>
                  <artifactId>trilead-ssh2</artifactId>
               </exclusion>
            </exclusions>
         </dependency>
      </dependencies>
   </dependencyManagement>
   <build>
      <pluginManagement>
         <plugins>
            <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-release-plugin</artifactId>
               <version>${maven-release-plugin.version}</version>
               <configuration>
                  <tagBase>https://csfe.aceworkspace.net/svn/repos/workbench/tags/</tagBase>
               </configuration>
            </plugin>
            <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-enforcer-plugin</artifactId>
               <version>${maven-enforcer-plugin.version}</version>
               <configuration>
                  <skip>true</skip>
               </configuration>
            </plugin>
         </plugins>
      </pluginManagement>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-release-plugin</artifactId>
            <configuration>
               <tagBase>https://csfe.aceworkspace.net/svn/repos/workbench/tags/</tagBase>
               <preparationGoals>clean install</preparationGoals>
               <autoVersionSubmodules>true</autoVersionSubmodules>
               <remoteTagging>true</remoteTagging>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>${maven-compiler-plugin.version}</version>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
            </configuration>
         </plugin>
      </plugins>
   </build>
   <reporting>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-plugin-plugin</artifactId>
            <version>${maven-plugin-plugin.version}</version>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-project-info-reports-plugin</artifactId>
            <version>${maven-project-info-reports-plugin.version}</version>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jxr-plugin</artifactId>
            <version>${maven-jxr-plugin.version}</version>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>${maven-javadoc-plugin.version}</version>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-report-plugin</artifactId>
            <version>${maven-surefire-report-plugin.version}</version>
         </plugin>
      </plugins>
   </reporting>
   <modules>
      <module>wb-foundation</module>
      <module>wb-core</module>
      <module>wb-api</module>
      <module>wb-wf</module>
      <module>wb-mojo</module>
      <module>wb-gui</module>
      <module>wb-bdb</module>
      <module>wb-bdb-mojo</module>
      <module>wb-dita-maven-plugin</module>
      <module>wb-docs</module>
      <module>tk-concept-component</module>
      <module>tk-drools</module>
      <module>tk-arena-spec</module>
      <module>tk-arena-rules</module>
      <module>tk-helpers</module>
      <module>tk-qa-ws-client</module>
      <module>rule-engine-integration</module>
      <module>tk-spelling-variants</module>
   </modules>
</project>
