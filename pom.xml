    <modelVersion>4.0.0</modelVersion>
    <groupId>org.dwfa</groupId>
    <artifactId>core</artifactId>
    <version>2.0.21-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Core Distributed Workflow Architecture Components</name>
    <url> https://mgr.servers.aceworkspace.net/pbl/cubitci/pub/core/site/index.html </url>
    <scm>
        <connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/trunk/core</connection>
        <developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/trunk/core</developerConnection>
        <url>https://csfe.aceworkspace.net/sf/scm/do/listRepositories/projects.dwfa/scm</url>
    </scm>
    <dependencies>
        <dependency>
            <groupId>org.dwfa.jini</groupId>
            <artifactId>mahalo</artifactId>
            <scope>compile</scope>
            <version>2.1</version>
        </dependency>
        <dependency>
            <!-- An alternative to:
                <dependency>
                <groupId>javax.mail</groupId>
                <artifactId>mail</artifactId>
                <version>1.4</version>
                <scope>compile</scope>
                </dependency>
                secondary to licensing issues -->
            <groupId>org.apache.geronimo.javamail</groupId>
            <artifactId>geronimo-javamail_1.4_mail</artifactId>
            <version>1.6</version>
        </dependency>
        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-lib</artifactId>
            <version>2.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-platform</artifactId>
            <version>2.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.dwfa</groupId>
            <artifactId>foundation</artifactId>
            <version>2.0.26</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.dwfa.jini</groupId>
            <artifactId>browser</artifactId>
            <version>2.1</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
