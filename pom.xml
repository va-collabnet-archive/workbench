<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.dwfa</groupId>
    <artifactId>dwfa-pom</artifactId>
    <version>2.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dwfa</groupId>
  <artifactId>term-mojo</artifactId>
  <packaging>maven-plugin</packaging>
  <version>1.5-SNAPSHOT</version>
  <name>ACE mojo</name>
  <url>http://mgr.cubit.aceworkspace.net:8081/dwfa/term-mojo</url>
  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>aceworkspace.net</id>
      <name>aceworkspace.net</name>
      <url>file:///ciweb/webapps/maven2</url>
      <layout>default</layout>
    </repository>
    <site>
      <id>aceworkspace.net</id>
      <url>file:///ciweb/webapps/dwfa/ace-mojo</url>
    </site>
  </distributionManagement>
  <scm>
    <connection>scm:svn:https://term-mojo.aceworkspace.net/svn/term-mojo/trunk/dev</connection>
    <developerConnection>scm:svn:https://term-mojo.aceworkspace.net/svn/term-mojo/trunk/dev</developerConnection>
    <url>https://term-mojo.aceworkspace.net/source/browse/term-mojo/trunk/dev/</url>
  </scm>
  <organization>
    <name>Informatics, Inc.</name>
    <url>http://www.informatics.com</url>
  </organization>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <inceptionYear>2006</inceptionYear>
  <description>This project provides a set of maven goals that are used to
    transform terminology data in 
  preperation for importing into standard file formats used by the ACE version-orented database, and by other applications. 
  </description>
  <dependencies>
    <dependency>
      <version>2.0.4</version>
      <groupId>org.dwfa</groupId>
      <artifactId>dwfa-mojo</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.0.6</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-core</artifactId>
      <version>2.0.6</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-model</artifactId>
      <version>2.0.6</version>
    </dependency>
    <dependency>
      <groupId>org.dwfa</groupId>
      <artifactId>vodb</artifactId>
      <version>1.4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.dwfa</groupId>
      <artifactId>ace-api</artifactId>
      <version>1.4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.derby</groupId>
      <artifactId>derby</artifactId>
      <version>10.3.1.4</version>
    </dependency>
    <dependency>
      <groupId>berkeleydb</groupId>
      <artifactId>je</artifactId>
      <version>3.2.23</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
      <version>2.0.6</version>
    </dependency>
    <dependency>
      <groupId>org.apache.lucene</groupId>
      <artifactId>lucene-core</artifactId>
      <version>2.2.0</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <workspace>/eclipse/workspace</workspace>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
    <id>genweb</id>
    <activation>
        <property>
          <name>webgengoals</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-plugin-plugin</artifactId>
            <configuration>
              <goalPrefix>plugin</goalPrefix>
              <outputDirectory>${project.build.directory}/generated-site/xdoc/plugins</outputDirectory>
            </configuration>
          </plugin>      
        </plugins>
      </build>
    </profile>
  </profiles>
</project>