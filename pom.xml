<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>au.gov.nehta</groupId>
        <artifactId>nehta-master-pom</artifactId>
        <version>1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>au.gov.nehta</groupId>
    <artifactId>ace-modules</artifactId>
    <name>ACE modules multi-module build</name>
    <packaging>pom</packaging>
    <description>multi-module build for the ACE modules (foundation, dwfa-mojo, core, ace-api, vodb and term-mojo)</description>
    <version>1.21-SNAPSHOT</version>
    <scm>
        <connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/branches/nehta</connection>
        <developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/branches/nehta</developerConnection>
        <url>https://csfe.aceworkspace.net/sf/scm/do/listRepositories/projects.dwfa/scm</url>
    </scm>
    <ciManagement>
        <system>bamboo</system>
        <url>http://buildserver1.nehta.net.au/bamboo/browse/ACENEHTA-ACEMODULESSNP</url>
    </ciManagement>
    <properties>
        <ace.devstyle.version>1.1-SNAPSHOT</ace.devstyle.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <svnkit.version>1.3.0.5847</svnkit.version>
        <svnusername>${relusername}</svnusername>
        <svnpassword>${relpassword}</svnpassword>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <!-- Subprojects -->
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>foundation</artifactId>
                <scope>compile</scope>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>core</artifactId>
                <scope>compile</scope>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>foundation</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>ace-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>dwfa-mojo</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>vodb</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>au.gov.nehta</groupId>
                <artifactId>term-mojo</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.derby</groupId>
                <artifactId>derby</artifactId>
                <version>10.5.3.0_1</version>
                <scope>compile</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.derby</groupId>
                <artifactId>derbytools</artifactId>
                <version>10.5.3.0_1</version>
            </dependency>
            <dependency>
                <groupId>org.apache.derby</groupId>
                <artifactId>derby-project</artifactId>
                <version>10.5.3.0_1</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.0-beta-9</version>
                </plugin>
                <plugin>
                    <groupId>au.gov.nehta</groupId>
                    <artifactId>dwfa-mojo</artifactId>
                    <version>${project.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.0-beta-9</version>
                <configuration>
                    <tagBase>https://csfe.aceworkspace.net/svn/repos/workbench/tags/nehta</tagBase>
                    <preparationGoals>clean validate</preparationGoals>
                    <goals>clean install</goals>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <remoteTagging>true</remoteTagging>
                    <username>${relusername}</username>
                    <password>${relpassword}</password>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jxr-maven-plugin</artifactId>
            </plugin>
