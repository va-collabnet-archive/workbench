<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ihtsdo</groupId>
	<artifactId>cement-jbin</artifactId>
	<version>1.0.1-SNAPSHOT</version>
	<name>cement java binary export</name>
	<scm>
		<connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/wb-refset-sab/trunk/wb-refset-sab/cement-jbin</connection>
		<developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/wb-refset-sab/trunk/wb-refset-sab/cement-jbin</developerConnection>
		<url>https://csfe.aceworkspace.net/integration/viewvc/viewvc.cgi/trunk/wb-refset-sab/cement-jbin/?root=wb-refset-sab&amp;system=exsy1002</url>
	</scm>
	<!-- TODO: to be moved into a organisational parent POM -->
	<distributionManagement>
		<snapshotRepository>
			<id>maestro_ihtsdo.wb-snapshots</id>
			<name>IHTSDO Workbench Snapshots Repository</name>
			<url>http://mgr.servers.aceworkspace.net/apps/maestro_ihtsdo/archiva/repository/wb-snapshots/</url>
		</snapshotRepository>
		<repository>
			<id>maestro_ihtsdo.wb-releases</id>
			<name>IHTSDO Workbench Releases Repository</name>
			<url>http://mgr.servers.aceworkspace.net/apps/maestro_ihtsdo/archiva/repository/wb-releases/</url>
		</repository>
	</distributionManagement>
	<properties>
		<org.ihtsdo.wb-gui.version>2.6.0-trek-2-SNAPSHOT</org.ihtsdo.wb-gui.version>
		<org.ihtsdo.wb-mojo.version>${org.ihtsdo.wb-gui.version}</org.ihtsdo.wb-mojo.version>
		<org.ihtsdo.wb-bdb.version>${org.ihtsdo.wb-gui.version}</org.ihtsdo.wb-bdb.version>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.ihtsdo</groupId>
				<artifactId>wb-mojo</artifactId>
				<version>${org.ihtsdo.wb-mojo.version}</version>
				<executions>
					<execution>
						<id>export-cement-taxonomy</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>export-cement-taxonomy</goal>
						</goals>
						<configuration>
							<taxonomies>
								<String>ACE_AUXILIARY</String>
								<String>REFSET_AUXILIARY</String>
								<String>DOCUMENT_AUXILIARY</String>
								<String>HL7</String>
								<String>QUEUE_TYPE</String>
							</taxonomies>
							<output>${project.build.directory}/generated-resources/ace</output>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.dwfa</groupId>
				<artifactId>term-mojo</artifactId>
				<version>1.43</version>
				<executions>
					<execution>
						<id>vodb-open</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>vodb-open</goal>
						</goals>
						<configuration>
							<vodbDirectory>${project.build.directory}/generated-resources/berkeley-db</vodbDirectory>
						</configuration>
					</execution>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>berkley-vodb-dir</goal>
						</goals>
					</execution>
					<execution>
						<phase>generate-resources</phase>
						<id>bcs-read-all</id>
						<goals>
							<goal>bcs-read-all</goal>
						</goals>
						<configuration>
							<changeSetDir>${project.build.directory}/../src/main/changesets
							</changeSetDir>
						</configuration>
					</execution>
					<execution>
						<id>vodb-export-econcepts</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>vodb-export-econcepts</goal>
						</goals>
					</execution>
					<execution>
						<id>vodb-close</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>vodb-close</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
