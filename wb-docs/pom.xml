<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>wb-mmb</artifactId>
		<groupId>org.ihtsdo</groupId>
		<version>2.6.0-trek-43</version>
	</parent>

	<artifactId>wb-docs</artifactId>
	<name>${branch}: BP task dita files for Guidebook</name>

	<description>Generate Workbench Guidebook DITA topic files for Business Process 
                Tasks by parsing collections of java bean source files. Package all DITA topic files
		          and ditamaps for later processing by DITA Open Toolkit.
	</description>

	<packaging>pom</packaging>

	<properties>
		<wb.src.dir>${project.build.directory}/wb-sources</wb.src.dir>
		<dita.src.dir>${project.build.directory}/dita-src</dita.src.dir>
	</properties>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>wb-api</artifactId>
			<version>${project.version}</version>
			<type>java-source</type>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>wb-core</artifactId>
			<version>${project.version}</version>
			<type>java-source</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${wb.src.dir}</outputDirectory>
							<includeTypes>java-source</includeTypes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>${project.groupId}</groupId>
				<artifactId>wb-dita-maven-plugin</artifactId>
				<version>${project.version}</version>
				<executions>
					<execution>
						<id>generate-dita</id>
						<phase>process-sources</phase>
						<configuration>
							<ditamapFileName>TaskLibrary.ditamap</ditamapFileName>
							<inputDirectories>
								<param>${wb.src.dir}/org/dwfa/ace/task</param>
								<param>${wb.src.dir}/org/dwfa/clock/task</param>
								<param>${wb.src.dir}/org/dwfa/bpa/tasks</param>
								<param>${wb.src.dir}/org/dwfa/bpa/worker/task</param>
								<param>${wb.src.dir}/org/dwfa/queue/bpa/tasks</param>
							</inputDirectories>
							<outputDirectory>${dita.src.dir}/Task_Library/autogenerated</outputDirectory>
						</configuration>
						<goals>
							<goal>gen-tasks</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!--  load ${timestamp} -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.0-beta-2</version>

				<executions>
					<execution>
						<phase>validate</phase>

						<goals>
							<goal>create</goal>
						</goals>

						<configuration>
							<timestampFormat>{0,date,MMMMM dd yyyy}</timestampFormat>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.3</version>
				<executions>
					<execution>
						<id>make-doc-date</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<resources>
								<resource>
									<directory>src/main/dita</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
							<outputDirectory>${dita.src.dir}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>add-dita-sources</id>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/dita-sources.xml</descriptor>
							</descriptors>
						</configuration>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
