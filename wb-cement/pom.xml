<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ihtsdo</groupId>
	<artifactId>cement-master</artifactId>
	<packaging>pom</packaging>
	<name>ihtsdo cement master pom</name>
	<version>0.0.1-SNAPSHOT</version>
	<description>Master pom for the ihtsdo cement project</description>
	
	<properties>
		<org.ihtsdo.wb-mojo.version>1.0-SNAPSHOT</org.ihtsdo.wb-mojo.version>
	</properties>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.ihtsdo</groupId>
				<artifactId>ihtsdo-resources</artifactId>
				<version>1.0-SNAPSHOT</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<!--
					A dependency required to use the jini/jehri dynamic provider
					security model
				-->
				<groupId>org.dwfa.jini</groupId>
				<artifactId>jsk-policy</artifactId>
				<scope>provided</scope>
				<version>2.1</version>
			</dependency>
			<dependency>
				<groupId>net.nhs.uktc</groupId>
				<artifactId>nhs-subset-editor-doc</artifactId>
				<scope>runtime-directory</scope>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.dwfa.jini</groupId>
				<artifactId>start</artifactId>
				<scope>compile</scope>
				<version>2.1</version>
			</dependency>
			<dependency>
				<groupId>org.dwfa.jini</groupId>
				<artifactId>jsk-dl</artifactId>
				<scope>compile</scope>
				<version>2.1</version>
			</dependency>
			<dependency>
				<groupId>org.ihtsdo</groupId>
				<artifactId>wb-bdb</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.dwfa</groupId>
				<artifactId>foundation</artifactId>
				<version>2.0.27-SNAPSHOT</version>
			</dependency>
			<dependency>
				<!--
					A dependency required to use the jini/jehri dynamic provider
					security model
				-->
				<groupId>org.dwfa.jini</groupId>
				<artifactId>jsk-policy</artifactId>
				<scope>provided</scope>
				<version>2.1</version>
			</dependency>
			<dependency>
				<groupId>org.dwfa</groupId>
				<artifactId>ace-ide-admin-bp</artifactId>
				<scope>runtime-directory</scope>
				<version>1.3-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.dwfa</groupId>
				<artifactId>ace-ide-user-bp</artifactId>
				<scope>runtime-directory</scope>
				<version>1.4-SNAPSHOT</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
				<plugin>	
				<groupId>org.ihtsdo</groupId>
                <artifactId>wb-mojo</artifactId>
                <version>${org.ihtsdo.wb-mojo.version}</version>
					<configuration>
						<stagingDirectory>${user.home}/Sites/
						</stagingDirectory>
						<visibility>priv</visibility>
						<cubitProject>cement</cubitProject>
						<siteRoot>${artifactId}</siteRoot>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<modules>
		<module>cement-cs</module>
		<module>cement-rf2</module>
		<module>cement-doc</module>
		<module>cement-assembly</module>
		<!-- <module>cement-java-binding</module>  -->
		<module>cement-profiles</module>
		<!--<module>cement-csub</module>-->
		<module>cement-sab</module>
		<!--<module>cement-vb</module>-->
		<module>cement-bdb</module>
	</modules>
	<!-- Since the cement master is not a "release point", we do not want to declare any dependencies, or other properties
	that will affect the build/release process of children projects -->
</project>