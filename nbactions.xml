            <properties>
                <Env.MAVEN_OPTS>-ea -XX:MaxPermSize=256M -d64 -XX:+UseCompressedOops -Xmx4g -Xms2g</Env.MAVEN_OPTS>
            </properties>
        </action>
        <action>
            <actionName>build-with-dependencies</actionName>
            <reactor>also-make</reactor>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-ea -XX:MaxPermSize=256M -d64 -XX:+UseCompressedOops -Xmx4g -Xms2g</Env.MAVEN_OPTS>
            </properties>
        </action>
