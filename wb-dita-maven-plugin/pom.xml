<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>wb-mmb</artifactId>
    <groupId>org.ihtsdo</groupId>
    <version>2.6.0-kp-1-SNAPSHOT</version>
  </parent>
  <artifactId>wb-dita-maven-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <name>${branch}: Workbench Maven DITA documentation mojo</name>
  <description>This Maven plugin (or mojo - Maven plain Old Java Object) builds a set of DITA topic
    files that can, in turn, be used to build documentation for the IHTSDO workbench. In this case,
    the DITA topic files describe each of the Workbench Business Process Automation tasks.
    Developers can assemble these tasks using the Workbench's graphical process builder to meet
    their organisation's specific requirements.</description>
  <dependencies>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.4</version>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.4</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-utils</artifactId>
      <version>1.5.6</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.2.1</version>
    </dependency>
    <dependency>
      <groupId>org.jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.thoughtworks.qdox</groupId>
      <artifactId>qdox</artifactId>
      <version>1.9</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.ihtsdo</groupId>
      <artifactId>wb-bdb</artifactId>
      <version>${project.version}</version>
    </dependency>
   </dependencies>
</project>
