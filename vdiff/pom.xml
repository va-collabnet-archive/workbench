<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ihtsdo</groupId>
	<artifactId>version-diff</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<dependencies>
		<dependency>
			<groupId>org.ihtsdo</groupId>
			<artifactId>wb-mojo</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ihtsdo</groupId>
			<artifactId>wb-bdb</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ihtsdo</groupId>
			<artifactId>nhs-bdb</artifactId>
			<scope>runtime-directory</scope>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.ihtsdo</groupId>
				<artifactId>wb-mojo</artifactId>
				<dependencies>
					<dependency>
						<groupId>org.ihtsdo</groupId>
						<artifactId>wb-bdb</artifactId>
						<version>1.0-SNAPSHOT</version>
					</dependency>
					<dependency>
						<groupId>org.apache.lucene</groupId>
						<artifactId>lucene-core</artifactId>
						<version>2.9.2</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>write-directories</id>
						<phase>initialize</phase>
						<goals>
							<goal>write-directories</goal>
						</goals>
						<configuration>
							<targetSubDir>generated-resources/</targetSubDir>
						</configuration>
					</execution>
					<execution>
						<id>vodb-open</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>vodb-open</goal>
						</goals>
						<configuration>
							<vodbDirectory>${project.build.directory}/generated-resources/berkeley-db</vodbDirectory>
						</configuration>
					</execution>
					<execution>
						<id>version-diff</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>version-diff</goal>
						</goals>
						<configuration>
							<name>default</name>
							<path_uuid>8c230474-9f11-30ce-9cad-185a96fd03a2</path_uuid>
							<v1>2009.01.31 00:00:00 PST</v1>
							<v2>2009.07.31 00:00:00 PDT</v2>
							<list_file>diffs.txt</list_file>
						</configuration>
					</execution>

					<execution>
						<id>vodb-close</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>vodb-close</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
