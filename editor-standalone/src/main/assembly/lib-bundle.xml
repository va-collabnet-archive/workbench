<component>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <!-- TODO: why is ihtsdo-resources in twice? -->
      <excludes>
        <!-- Exclude the dependencies just used to unpacking -->
        <exclude>org.ihtsdo.sample:*</exclude>
        <exclude>org.ihtsdo:wb-ide-admin-bp</exclude>
        <exclude>org.ihtsdo:wb-ide-user-bp</exclude>
        <!-- Included below -->
        <exclude>org.dwfa.jini:jsk-dl</exclude>
        <!-- not sure why this is not included but others in its tree are -->
        <exclude>au.csiro:snorocket</exclude>
        <!-- required at compile time by rule-engine, but not at runtime -->
        <exclude>junit:junit</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/lib-dl</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
        <include>org.dwfa.jini:outrigger-dl</include>
        <include>org.dwfa.jini:reggie-dl</include>
        <include>org.dwfa.jini:mahalo-dl</include>
        <include>org.dwfa.jini:jsk-dl</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/lib-ext</outputDirectory>
      <unpack>false</unpack>
      <scope>provided</scope>
      <includes>
        <include>org.dwfa.jini:jsk-policy</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/resources</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/*.psd</exclude>
          <exclude>**/*.doc</exclude>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <scope>runtime</scope>
      <includes>
        <include>org.ihtsdo:ihtsdo-resources</include>
      </includes>
    </dependencySet>
  </dependencySets>
</component>
