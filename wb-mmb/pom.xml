<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.dwfa</groupId>
        <artifactId>dwfa-pom</artifactId>
        <version>3-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ihtsdo</groupId>
    <artifactId>wb-mmb</artifactId>
    <version>2.5-SNAPSHOT</version>
    <name>Workbench modules multi-module build</name>
    <packaging>pom</packaging>
    <description>multi-module build for the Workbench modules (dwfa-pom, foundation, 
                 dwfa-mojo, core, ace-api, vodb and term-mojo)</description>
    <scm>
        <connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/branches/restructure/wb-mmb</connection>
        <developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/workbench/branches/restructure/wb-mmb</developerConnection>
        <url>https://csfe.aceworkspace.net/integration/viewvc/viewvc.cgi/trunk/wb-mmb/?root=workbench&amp;system=exsy1002</url>
    </scm>
    <properties>
        <ace.devstyle.version>1.1-SNAPSHOT</ace.devstyle.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <svnkit.version>1.3.0.5847</svnkit.version>
        <svnusername>${relusername}</svnusername>
        <svnpassword>${relpassword}</svnpassword>
    </properties>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.0-beta-9</version>
                </plugin>
                <plugin>
                    <groupId>org.dwfa</groupId>
                    <artifactId>dwfa-mojo</artifactId>
                    <version>${project.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.0-beta-9</version>
                <configuration>
                    <tagBase>https://csfe.aceworkspace.net/svn/repos/workbench/tags/</tagBase>
                    <preparationGoals>clean validate</preparationGoals>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <remoteTagging>true</remoteTagging>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jxr-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jxr-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>
    <modules>
        <module>foundation</module>
        <module>core</module>
        <module>wb-api</module>
        <module>wb-mojo</module>
        <module>wb-gui</module>        
        <module>wb-bdb</module>        
        <module>wb-bdb-mojo</module>        
    </modules>
</project>
