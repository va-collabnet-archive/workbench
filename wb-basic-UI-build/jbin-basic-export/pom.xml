	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.build.directory}/generated-sources/main/java
								</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.dwfa</groupId>
				<artifactId>dwfa-mojo</artifactId>
				<version>2.0.30-SNAPSHOT</version>
				<executions>
					<execution>
						<id>write-directories</id>
						<phase>initialize</phase>
						<goals>
							<goal>write-directories</goal>
						</goals>
						<configuration>
							<targetSubDir>generated-resources/
              </targetSubDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.dwfa</groupId>
				<artifactId>term-mojo</artifactId>
				<version>1.43-SNAPSHOT</version>
				<executions>
					<execution>
						<id>vodb-open</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>vodb-open</goal>
						</goals>
						<configuration>
							<vodbDirectory>${project.build.directory}/generated-resources/berkeley-db
							</vodbDirectory>
							<useExistingDb>true</useExistingDb>
						</configuration>
					</execution>
