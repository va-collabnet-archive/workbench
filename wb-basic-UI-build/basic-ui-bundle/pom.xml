<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ihtsdo</groupId>
	<artifactId>basic-ui-bundle</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Basic wb based UI bundle with new bdb implementation</name>
	<description>Basic WB bundle with new bdb</description>
	<inceptionYear>2010</inceptionYear>
	<!--
		<scm>
		<connection>scm:svn:https://csfe.aceworkspace.net/svn/repos/wb-refset-sab/trunk/wb-refset-sab/uk-bdb-sab/</connection>
		<developerConnection>scm:svn:https://csfe.aceworkspace.net/svn/repos/wb-refset-sab/trunk/wb-refset-sab/uk-bdb-sab/</developerConnection>
		<url>https://csfe.aceworkspace.net/sf/scm/do/listRepositories/projects.ihtsdo_subset_editor/scm</url>
		</scm>
	-->
	<properties>
		<maven.assembly.plugin.version>2.2-beta-4</maven.assembly.plugin.version>
		<org.ihtsdo.wb-gui.version>1.0-SNAPSHOT</org.ihtsdo.wb-gui.version>
		<org.dwfa.pbl-mojo.version>1.3</org.dwfa.pbl-mojo.version>
		<org.dwfa.dwfa-mojo.version>2.0.31-SNAPSHOT</org.dwfa.dwfa-mojo.version>
		<org.dwfa.term-mojo.version>1.44-SNAPSHOT</org.dwfa.term-mojo.version>
		<org.dwfa.ace-ide-admin-bp.version>1.2-SNAPSHOT</org.dwfa.ace-ide-admin-bp.version>
		<org.dwfa.ace-ide-user-bp.version>1.3-SNAPSHOT</org.dwfa.ace-ide-user-bp.version>

		<!-- standalone bundle variables -->
		<sa.bundle.name>basicUI</sa.bundle.name>
		<sa.bundle.directory>${sa.bundle.name}-bundle</sa.bundle.directory>

		<!-- change set update bundle variables -->
		<!--
			<csu.bundle.name>nhs-subset-editor-csu</csu.bundle.name>
			<csu.bundle.directory>${csu.bundle.name}-bundle</csu.bundle.directory>
			<csu.bundle.directory.rt.i4j>../../../target/${csu.bundle.directory}/${csu.bundle.name}</csu.bundle.directory.rt.i4j>
			<csu.bundle.shortname>csu.bundle.name</csu.bundle.shortname>
		-->

		<!-- viewer bundle variables -->
		<!--
			<v.bundle.name>nhs-subset-editor-v</v.bundle.name>
			<v.bundle.shortname>${v.bundle.name}</v.bundle.shortname>
			<v.bundle.directory>${v.bundle.name}-bundle</v.bundle.directory>
			<v.bundle.directory.rt.i4j>../../../target/${v.bundle.directory}</v.bundle.directory.rt.i4j>
		-->

		<!-- Classifier Projects -->
		<snorocket.version>1.1.11-SNAPSHOT</snorocket.version>

		<!-- Controls the location and naming of the bundle -->



	</properties>
	<dependencies>
		<dependency>
			<groupId>org.dwfa.jini</groupId>
			<artifactId>start</artifactId>
			<scope>compile</scope>
			<version>2.1</version>
		</dependency>
		<dependency>
			<groupId>org.dwfa.jini</groupId>
			<artifactId>jsk-dl</artifactId>
			<scope>compile</scope>
			<version>2.1</version>
		</dependency>
		<dependency>
			<groupId>org.ihtsdo</groupId>
			<artifactId>bdb-build</artifactId>
			<scope>runtime-directory</scope>
			<version>${project.version}</version>
		</dependency>
		<!--
			<dependency> <groupId>net.nhs.uktc</groupId>
			<artifactId>nhs-subset-editor-doc</artifactId>
			<scope>runtime-directory</scope>
			<version>${project.version}</version> </dependency>
		-->
		<!--
			<dependency> <groupId>org.dwfa</groupId>
			<artifactId>ace-ide-admin-bp</artifactId>
			<version>${org.dwfa.ace-ide-admin-bp.version}</version>
			<scope>runtime-directory</scope> <exclusions> <exclusion>
			<artifactId>ace-api</artifactId> <groupId>org.dwfa</groupId>
			</exclusion> </exclusions> </dependency> <dependency>
			<groupId>org.dwfa</groupId> <artifactId>ace-ide-user-bp</artifactId>
			<version>${org.dwfa.ace-ide-user-bp.version}</version>
			<scope>runtime-directory</scope> </dependency> <dependency>
			<groupId>org.ihtsdo</groupId>
			<artifactId>ihtsdo-resources</artifactId>
			<version>1.0-SNAPSHOT</version> <scope>compile</scope> </dependency>
		-->
		<dependency>
			<!--
				A dependency required to use the jini/jehri dynamic provider
				security model
			-->
			<groupId>org.dwfa.jini</groupId>
			<artifactId>jsk-policy</artifactId>
			<scope>provided</scope>
			<version>2.1</version>
		</dependency>
		<dependency>
			<groupId>org.ihtsdo</groupId>
			<artifactId>wb-bdb</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${maven.assembly.plugin.version}</version>
				<executions>
					<execution>
						<id>assembly</id>
						<phase>process-resources</phase>
						<goals>
							<goal>directory-single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/bundle-all.xml</descriptor>
							</descriptors>
							<finalName>${sa.bundle.name}</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.dwfa</groupId>
				<artifactId>dwfa-mojo</artifactId>
				<version>${org.dwfa.dwfa-mojo.version}</version>
				<dependencies>
					<dependency>
						<groupId>org.ihtsdo</groupId>
						<artifactId>wb-gui</artifactId>
						<version>${org.ihtsdo.wb-gui.version}</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>process-config</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>process-config</goal>
						</goals>
						<configuration>
							<specs>
								<extractAndProcessSpec>
									<filePatternStr>^org/dwfa/resources/core/config.*config$
									</filePatternStr>
									<destDir>generated-resources/config</destDir>
									<substitutions>
										<substutionSpec>
											<patternStr>"org.dwfa.discovery" </patternStr>
											<replacementStr>org.dwfa.jini.ConfigUtil.getUniqueJvmGroup()
											</replacementStr>
											<nullActionStr>REPLACE_LITERAL</nullActionStr>
										</substutionSpec>
									</substitutions>
								</extractAndProcessSpec>
								<extractAndProcessSpec>
									<filePatternStr>^org/jehri/config.*config$</filePatternStr>
									<destDir>generated-resources/config</destDir>
									<substitutions>
										<substutionSpec>
											<propertyName>org.dwfa.configname</propertyName>
											<patternStr>UniqueConfig</patternStr>
											<replacementStr />
											<nullActionStr>EMPTY_STRING</nullActionStr>
										</substutionSpec>
										<substutionSpec>
											<patternStr>"org.dwfa.discovery" </patternStr>
											<replacementStr>org.dwfa.jini.ConfigUtil.getUniqueJvmGroup()
											</replacementStr>
											<nullActionStr>REPLACE_LITERAL</nullActionStr>
										</substutionSpec>
									</substitutions>
								</extractAndProcessSpec>
								<extractAndProcessSpec>
									<filePatternStr>^org/dwfa/ace/config.*config$</filePatternStr>
									<destDir>generated-resources/config</destDir>
									<substitutions>
										<substutionSpec>
											<propertyName>org.dwfa.configname</propertyName>
											<patternStr>UniqueConfig</patternStr>
											<replacementStr />
											<nullActionStr>EMPTY_STRING</nullActionStr>
										</substutionSpec>
										<substutionSpec>
											<patternStr>"org.dwfa.discovery"</patternStr>
											<replacementStr>org.dwfa.jini.ConfigUtil.getUniqueJvmGroup()
											</replacementStr>
											<nullActionStr>REPLACE_LITERAL</nullActionStr>
										</substutionSpec>
									</substitutions>
								</extractAndProcessSpec>
								<extractAndProcessSpec>
									<filePatternStr>^org/dwfa/ace/config.*policy</filePatternStr>
									<destDir>generated-resources/config</destDir>
								</extractAndProcessSpec>
								<extractAndProcessSpec>
									<filePatternStr>^org/jehri/config.*policy</filePatternStr>
									<destDir>generated-resources/config</destDir>
								</extractAndProcessSpec>
								<extractAndProcessSpec>
									<filePatternStr>^org/dwfa/resources/core/config.*policy
									</filePatternStr>
									<destDir>generated-resources/config</destDir>
								</extractAndProcessSpec>
								<extractAndProcessSpec>
									<filePatternStr>^org/dwfa/resources/core/config.*properties
									</filePatternStr>
									<destDir>generated-resources/config</destDir>
								</extractAndProcessSpec>
								<extractAndProcessSpec>
									<filePatternStr>^org/dwfa/resources/core/icon.*
									</filePatternStr>
									<destDir>generated-resources/config/icon</destDir>
								</extractAndProcessSpec>
							</specs>
						</configuration>
					</execution>
					<execution>
						<id>export-beans</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>export-beans</goal>
						</goals>
						<configuration>
							<targetSubDir>generated-resources</targetSubDir>
						</configuration>
					</execution>
					<execution>
						<id>write-config</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>write-config</goal>
						</goals>
						<configuration>
							<specs>
								<configSpec>
									<className>org.dwfa.ace.config.AceLocalConfiguration
									</className>
									<configFileName>generated-resources/config/start-ace-local.config
									</configFileName>
									<methodName>writeToFile</methodName>
								</configSpec>
								<configSpec>
									<className>org.dwfa.ace.config.AceConfiguration</className>
									<configFileName>generated-resources/config/start-ace.config
									</configFileName>
									<methodName>writeToFile</methodName>
								</configSpec>
							</specs>
						</configuration>
					</execution>
					<execution>
						<id>generate-scripts</id>
						<phase>compile</phase>
						<goals>
							<goal>generate-scripts</goal>
						</goals>
						<configuration>
							<scriptOutputDir>${sa.bundle.directory}/</scriptOutputDir>
							<libDir>lib</libDir>
							<scriptNames>
								<param>wb</param>
								<param>dWb</param>
								<param>pWb</param>
							</scriptNames>
						</configuration>
					</execution>
					<execution>
						<id>write-directories-install</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>write-directories</goal>
						</goals>
						<configuration>
							<targetSubDir>generated-resources/</targetSubDir>
						</configuration>
					</execution>
					<execution>
						<id>write-directories-site</id>
						<phase>pre-site</phase>
						<goals>
							<goal>write-directories</goal>
						</goals>
						<configuration>
							<targetSubDir>generated-resources/</targetSubDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<id>svn-checkout</id>
						<phase>pre-site</phase>
						<goals>
							<goal>checkout</goal>
						</goals>
						<configuration>
							<checkoutDirectory>${project.build.directory}/changesets
							</checkoutDirectory>
							<connectionUrl>
								scm:svn:https://csfe.aceworkspace.net/svn/repos/nhs-subset-editor-master/trunk/nhs-subset-editor-tide-mmb/nhs-subset-editor-profiles/src/main/resources/profiles
							</connectionUrl>
							<username>${svnusername}</username>
							<password>${svnpassword}</password>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.dwfa</groupId>
				<artifactId>term-mojo</artifactId>
				<dependencies>
					<dependency>
						<groupId>org.ihtsdo</groupId>
						<artifactId>wb-gui</artifactId>
						<version>${org.ihtsdo.wb-gui.version}</version>
						<scope>compile</scope>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>vodb-open</id>
						<phase>pre-site</phase>
						<goals>
							<goal>vodb-open</goal>
						</goals>
						<configuration>
							<vodbDirectory>target/generated-resources/berkeley-db
							</vodbDirectory>
						</configuration>
					</execution>
					<execution>
						<id>DBPropertyCreator</id>
						<phase>pre-site</phase>
						<goals>
							<goal>setproperties</goal>
						</goals>
						<configuration>
							<inputDirectory>${user.home}/.m2</inputDirectory>
							<fileName>properties</fileName>
						</configuration>
					</execution>
					<execution>
						<id>bcs-read-all</id>
						<phase>pre-site</phase>
						<goals>
							<goal>bcs-read-all</goal>
						</goals>
						<configuration>
							<validators>
								<validator>
									org.dwfa.ace.api.cs.LenientComponentValidator
								</validator>
							</validators>
							<changeSetDir>${project.build.directory}/changesets
							</changeSetDir>
						</configuration>
					</execution>
					<execution>
						<id>refset-listing</id>
						<phase>pre-site</phase>
						<goals>
							<goal>refset-listing</goal>
						</goals>
						<configuration>
							<name>default</name>
							<sort_by_name>false</sort_by_name>
							<list_file>target/classes/refsets.html</list_file>
						</configuration>
					</execution>
					<execution>
						<id>vodb-close</id>
						<phase>pre-site</phase>
						<goals>
							<goal>vodb-close</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			  <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${maven.assembly.plugin.version}</version>
				<executions>
					<execution>
						<id>zipDir</id>
						<phase>deploy</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/zip-dir.xml</descriptor>
							</descriptors>
							<finalName>${sa.bundle.name}</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin> 
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>run-on-mac</id>
			<activation>
				<os>
					<name>Mac OS X</name>
				</os>
				<file>
					<exists>target/${sa.bundle.directory}/${sa.bundle.name}/dAceOsX.sh
					</exists>
				</file>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.codehaus.mojo</groupId>
							<artifactId>exec-maven-plugin</artifactId>
							<version>1.1.1</version>
							<executions>
								<execution>
									<id>exec-one</id>
									<phase>run</phase>
									<goals>
										<goal>exec</goal>
									</goals>
								</execution>
							</executions>
							<configuration>
								<workingDirectory>target/${sa.bundle.directory}/
								</workingDirectory>
								<executable>./dAceOsX.sh</executable>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<id>run-on-pc</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
				<file>
					<exists>target/${sa.bundle.directory}/${sa.bundle.name}/ace.bat
					</exists>
				</file>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.codehaus.mojo</groupId>
							<artifactId>exec-maven-plugin</artifactId>
							<version>1.1.1</version>
							<executions>
								<execution>
									<id>exec-one</id>
									<phase>run</phase>
									<goals>
										<goal>exec</goal>
									</goals>
								</execution>
							</executions>
							<configuration>
								<workingDirectory>target/${sa.bundle.directory}/${sa.bundle.name}
								</workingDirectory>
								<executable>ace.bat</executable>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<id>install4j</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>install4j</id>
								<phase>install</phase>
								<configuration>
									<tasks>
										<taskdef name="install4j" classname="com.install4j.Install4JTask"
											classpath="/Applications/install4j 4/bin/ant.jar;/opt/install4j/bin/ant.jar" />
										<install4j projectfile="src/main/install4j/ihtsdo_sa.install4j">
											<variable name="project.version" value="6c.uk.sa" />
											<variable name="bundle.directory.rt.i4j" value="${sa.bundle.directory.rt.i4j}" />
											<variable name="bundle.directory" value="${project.build.finalName}" />
											<variable name="pom.short.name" value="${sa.bundle.short.name}" />
										</install4j>
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>commons-net</groupId>
								<artifactId>commons-net</artifactId>
								<version>1.4.1</version>
							</dependency>
							<dependency>
								<groupId>ant</groupId>
								<artifactId>ant-commons-net</artifactId>
								<version>1.6.5</version>
							</dependency>
							<dependency>
								<groupId>ant</groupId>
								<artifactId>ant-nodeps</artifactId>
								<version>1.6.5</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>