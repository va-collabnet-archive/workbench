	<build>
		<plugins>
			<plugin>
				<groupId>org.dwfa</groupId>
				<artifactId>dwfa-mojo</artifactId>
				<version>2.0.31-SNAPSHOT</version>
				<executions>
					<execution>
						<id>write-directories</id>
						<phase>initialize</phase>
						<goals>
							<goal>write-directories</goal>
						</goals>
						<configuration>
							<targetSubDir>generated-resources/
              </targetSubDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.ihtsdo</groupId>
				<artifactId>wb-bdb-mojo</artifactId>
				<version>1.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>load-econcepts</id>
						<phase>compile</phase>
						<goals>
							<goal>load-econcepts</goal>
						</goals>
					</execution>
				</executions>
