                        <id>export-cement-taxonomy</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>export-cement-taxonomy</goal>
                        </goals>
                        <configuration>
                            <taxonomies>
                                <string>ACE_AUXILIARY</string>
                                <string>REFSET_AUXILIARY</string>
                            </taxonomies>
                            <output>${project.build.directory}/generated-resources/org/dwfa/cement</output>
                        </configuration>
                    </execution>
                    <execution>
                        <id>transform</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                        <configuration>
                            <idFileLoc>${project.build.directory}/generated-resources/</idFileLoc>
                            <outputSpecs>
                                <outputSpec name="Concepts from ACE">
                                    <writers>
                                        <writer
                                            implementation="org.dwfa.maven.transform.SimpleExport">
                                            <fileName>${project.build.directory}/generated-resources/ace/concepts.txt</fileName>
                                            <exportOnlyActive>false</exportOnlyActive>
                                            <append>true</append>
                                            <columns>
                                                <name>CONCEPTID</name>
                                                <name>CONCEPTSTATUS</name>
                                                <name>ISPRIMITIVE</name>
                                                <name>EFFECTIVETIME</name>
                                                <name>PATHUUID</name>
                                            </columns>
                                        </writer>
                                    </writers>
                                    <inputSpecs>
                                        <inputSpec>
                                            <inputFile>${project.build.directory}/generated-resources/org/dwfa/cement/concepts.txt</inputFile>
                                            <skipFirstLine>false</skipFirstLine>
                                            <columnSpecs>
                                                <transform
                                                  implementation="org.dwfa.maven.transform.IdentityTransform">
                                                  <name>CONCEPTID</name>
                                                </transform>
                                                <transform
                                                  implementation="org.dwfa.maven.transform.IdentityTransform">
                                                  <name>CONCEPTSTATUS</name>
                                                </transform>
                                                <transform
                                                  implementation="org.dwfa.maven.transform.IdentityTransform">
